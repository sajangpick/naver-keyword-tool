# ============================================
# 서버 설정
# ============================================
NODE_ENV=production
PORT=10000
# Vercel 배포 시 실제 도메인으로 변경하세요
CORS_ORIGIN=https://your-domain.vercel.app

# ============================================
# 네이버 검색광고 API (키워드 도구)
# https://searchad.naver.com/ 에서 발급
# ============================================
NAVER_CUSTOMER_ID=
NAVER_API_KEY=
NAVER_SECRET_KEY=

# ============================================
# 네이버 OpenAPI (로컬 검색 / 플레이스)
# https://developers.naver.com/apps/ 에서 발급
# ============================================
NAVER_SEARCH_CLIENT_ID=
NAVER_SEARCH_CLIENT_SECRET=

# ============================================
# 네이버 데이터랩 API (트렌드)
# https://developers.naver.com/apps/ 에서 발급
# ============================================
NAVER_DATALAB_CLIENT_ID=
NAVER_DATALAB_CLIENT_SECRET=

# ============================================
# AI API 키
# ============================================
# OpenAI (ChatGPT)
# https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Google Gemini
# https://aistudio.google.com/app/apikey
GEMINI_API_KEY=

# Anthropic Claude
# https://console.anthropic.com/
CLAUDE_API_KEY=

# ============================================
# 카카오 로그인 (OAuth)
# https://developers.kakao.com/
# ============================================
KAKAO_REST_API_KEY=
# Vercel 배포 시 실제 도메인으로 변경하세요
KAKAO_REDIRECT_URI=https://your-domain.vercel.app/auth/kakao/callback
KAKAO_CLIENT_SECRET=

# ============================================
# 인증 / JWT
# ============================================
# 반드시 32자 이상의 긴 랜덤 문자열로 설정하세요!
# 생성 예시: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=

# ============================================
# 보안 설정
# ============================================
# CSP를 Report-Only에서 Enforce로 전환 (선택사항)
CSP_ENFORCE=false

# ============================================
# 기능 플래그 (실험적 기능)
# ============================================
FEATURE_API_READ_NEXT=false
FEATURE_API_CHAT_NEXT=false
FEATURE_AUTH_NEXT=false

