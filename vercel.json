{
  "version": 2,
  "framework": null,
  "installCommand": "pnpm install --no-frozen-lockfile",
  "buildCommand": "echo 'Building static files...'",
  "outputDirectory": ".",
  "trailingSlash": false,
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://naver-keyword-tool.onrender.com/api/:path*"
    },
    {
      "source": "/auth/:path*",
      "destination": "https://naver-keyword-tool.onrender.com/auth/:path*"
    }
  ],
  "redirects": [
    {
      "source": "/admin",
      "destination": "/admin/pages/dashboard.html",
      "permanent": false
    },
    {
      "source": "/admin/",
      "destination": "/admin/pages/dashboard.html",
      "permanent": false
    }
  ],
  "crons": [
    {
      "path": "/api/cron/review-monitoring",
      "schedule": "0 9,14,20 * * *"
    },
    {
      "path": "/api/cron/keep-alive",
      "schedule": "*/10 * * * *"
    }
  ],
  "trailingSlash": false
}
